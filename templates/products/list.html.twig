{% block body %}
   <table width="100%" border="1" style="border-collapse:collapse">
    <tr>
        <th colspan="4"><b>Product</b></th> 


    </tr>

    {% for sp in data %}
        {% if loop.index % 3 == 0 %}
            <tr>
        {% endif %}
        <td width="33%">
            {# <a href="{{ path('product_detail', {'id': row.product_id}) }}"> #}
                <center>
                    <b>{{ sp.name }}</b><br/>
                    <img src="{{ asset('uploads/sanpham/' ~ sp.photo) }}" height="100px"><br/>
                    {{ sp.gia|number_format(0) }} VND
                </center> 
                <form>
                
                <center><button type="submit" formmethod="post" formaction="{{path('app_cart_add',{'product_id':sp.getId()})}}">Add to cart</button> </center> 
          
                </form> 
                {# <center><a href="{{path('app_cart_add',{'product_id':sp.getId()})}}"><button>Add to cart</button></a></center>
        </td> #}
