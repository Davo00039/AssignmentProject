    </tr>

    {% for row in data %}
        {% if loop.index % 3 == 0 %}
            <tr>
        {% endif %}
        <td width="33%">
            {# <a href="{{ path('product_detail', {'id': row.product_id}) }}"> #}
                <center>
                    <b>{{ row.name }}</b><br/>
                    <img src="{{ asset('uploads/sanpham/' ~ row.photo) }}" height="100px"><br/>
                    {{ row.gia|number_format(0) }} VND
                </center>
            {# </a> #}
            {# <center>
                <a href="{{ path('add_to_cart', {'id': row.product_id}) }}"><button>Add to cart</button></a>
            </center> #}
        </td>
        {% if loop.index % 3 == 2 %}
            </tr>
        {% endif %}
    {% endfor %}
    {% if data|length % 3 != 0 %}
        </tr>
    {% endif %}
</table>

